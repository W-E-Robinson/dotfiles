[push]
    default = current
[user]
    name = Will Robinson
    email = william.ellis.robinson@gmail.com
[init]
    defaultBranch = main
[core]
    editor = nvim
[rerere]
    enabled = true
    autoUpdate = true
[branch]
    sort = -committerdate
[alias]
    bomb = restore .
    nuke = !git restore . && git clean -fd
    st = status
    c = commit
    s = switch
    b = branch
    d = diff
    ds = diff --staged
    m = merge
    r = rebase
    ref = reflog
    ap = add -p
    rp = restore -p
    f = fetch
    cp = cherry-pick
    bl = blame -w -C -C -C
    pl = pull
    ps = push
    psf = push --force-with-lease
